<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/mealContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/mealDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mealDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mealItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# of Items: "
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/itemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />

        <TextView
            android:id="@+id/mealTotals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Totals"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/mealTotalKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kcal Total: "
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/mealTotalMoisture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moisture Total: "
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/mealTotalProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein Total: "
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/mealTotalFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats Total: "
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>